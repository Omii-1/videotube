generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  fullname     String
  avatar       String
  coverImage   String?
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // content created by user
  videos    Video[]    @relation("VideoOwner")
  playLists Playlist[] @relation("PlayListOwner")
  comments  Comment[]
  tweets    Tweet[]

  // user activity
  likes        Like[]
  watchHistory WatchHistory[]

  // channels i subscribed to
  subscribedTo Subscription[] @relation("Subscriber")
  // people who subscribe to me
  subscribers  Subscription[] @relation("Channel")
}

model Video {
  id             Int      @id @default(autoincrement())
  videoFile      String
  videoThumbnail String
  title          String
  description    String?
  views          Int      @default(0)
  duration       Int
  isPublished    Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // owner
  ownerId Int
  owner   User @relation("VideoOwner", fields: [ownerId], references: [id])

  // relations
  playlists      Playlist[]
  historyEntries WatchHistory[]
  comments       Comment[]
  likes          Like[]
}

model Playlist {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relations
  videos  Video[]
  ownerId Int
  owner   User    @relation("PlayListOwner", fields: [ownerId], references: [id])
}

model WatchHistory {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  // relations
  user   User @relation(fields: [userId], references: [id])
  userId Int

  video   Video @relation(fields: [videoId], references: [id])
  videoId Int
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  video   Video @relation(fields: [videoId], references: [id])
  videoId Int

  owner  User @relation(fields: [ownerId], references: [id])
  ownerId Int

  likes Like[]
}

model Tweet {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  likes Like[]
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // who liked it
  likedBy   User @relation(fields: [likedById], references: [id])
  likedById Int

  // what they like ( optional )
  video   Video? @relation(fields: [videoId], references: [id])
  videoId Int?

  comment   Comment? @relation(fields: [commentId], references: [id])
  commentId Int?

  tweet   Tweet? @relation(fields: [tweetId], references: [id])
  tweetId Int?
}

model Subscription {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriber   User @relation("Subscriber", fields: [subscriberId], references: [id])
  subscriberId Int

  channel   User @relation("Channel", fields: [channelId], references: [id])
  channelId Int

// CRITICAL OPTIMIZATION - Prevents duplicate subscription
  @@unique([subscriberId, channelId])
}
